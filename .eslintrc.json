{
  "env": {
    "node": true,
    "browser": true,
    "commonjs": true,
    "es2021": true
  },
  "extends": ["airbnb-base"],
  "parserOptions": {
    "ecmaVersion": 12
  },
  "rules": {
    "no-console": 0,
    "global-require": 0,
    "linebreak-style": ["error", "unix"],
    "max-len": ["error", { "code": 150 }]
  }
}
